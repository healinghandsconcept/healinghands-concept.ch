          <label for="message">Message</label>
          <textarea id="message" name="message" rows="5" required placeholder="Comment pouvons-nous vous aider ?"></textarea>
        </div>

        <button type="submit" class="btn">Envoyer mon message</button>
        <div id="form-status" class="form-status"></div>
      </form>
    </div>
  </div>
</section>

<script>
// Logic for Resend Integration (Client-side implementation with instructions)
document.getElementById('contact-form').addEventListener('submit', async function(e) {
  e.preventDefault();
  const statusEl = document.getElementById('form-status');
  const submitBtn = e.target.querySelector('button');
  
  statusEl.textContent = 'Envoi en cours...';
  submitBtn.disabled = true;

  // IMPORTANT: Since this is a static site, you need a backend endpoint to keep your Resend API Key secret.
  // We recommend using a serverless function (Vercel, Netlify, or a simple Node interface).
  
  const formData = new FormData(this);
  const data = Object.fromEntries(formData.entries());

  try {
    const response = await fetch('/api/send', { 
      method: 'POST',
      body: formData // Sending FormData directly is often easier, but the function expects JSON? 
                     // Wait, my function code expects FormData? 
                     // Let's check functions/api/send.js
                     // Yes: const formData = await request.formData();
    });

    const result = await response.json();

    if (response.ok) {
      statusEl.textContent = 'Merci ! Votre message a été envoyé avec succès.';
      statusEl.className = 'form-status success';
      this.reset();
    } else {
      throw new Error(result.error || 'Erreur lors de l\'envoi');
    }

  } catch (error) {
    statusEl.textContent = "Une erreur est survenue : " + error.message;
    statusEl.className = 'form-status error';
  } finally {
    submitBtn.disabled = false;
  }
});
</script>
