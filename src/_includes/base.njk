<!DOCTYPE html>
<html lang="{{ language or metadata.language }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Healing Hands Concept",
      "description": "{{ description or metadata.description }}",
      "image": "{{ metadata.url }}/assets/img/logo-main.png",
      "@id": "{{ metadata.url }}",
      "url": "{{ metadata.url }}",
      "telephone": "",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "{{ metadata.address.streetAddress }}",
        "addressLocality": "{{ metadata.address.addressLocality }}",
        "postalCode": "{{ metadata.address.postalCode }}",
        "addressCountry": "{{ metadata.address.addressCountry }}"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 46.8065,
        "longitude": 7.1620
      },
      "openingHoursSpecification": {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": [
          "Monday",
          "Tuesday",
          "Wednesday",
          "Thursday",
          "Friday"
        ],
        "opens": "08:00",
        "closes": "19:00"
      }
    }
    </script>
    {% if translationKey %}
    {% for item in collections.all %}
      {% if item.data.translationKey == translationKey %}
      <link rel="alternate" hreflang="{{ item.data.language }}" href="{{ metadata.url }}{{ item.url }}">
      {% if item.data.language == 'fr' %}
      <link rel="alternate" hreflang="x-default" href="{{ metadata.url }}{{ item.url }}">
      {% endif %}
      {% endif %}
    {% endfor %}
    {% endif %}
    <link rel="canonical" href="{{ metadata.url }}{{ page.url }}">
    <meta property="og:title" content="{{ title or metadata.title }}">
    <meta property="og:description" content="{{ description or metadata.description }}">
    <meta property="og:url" content="{{ metadata.url }}{{ page.url }}">
    <meta property="og:image" content="{{ metadata.url }}/assets/img/logo-main.png">
    <meta property="og:type" content="website">
    <meta property="og:locale" content="{{ language or metadata.language or 'fr' }}">
    <link rel="stylesheet" href="{{ '/assets/css/style.css' | url }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ '/assets/img/favicon/apple-touch-icon.png' | url }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ '/assets/img/favicon/favicon-32x32.png' | url }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ '/assets/img/favicon/favicon-16x16.png' | url }}">
    <link rel="shortcut icon" href="{{ '/assets/img/favicon/favicon.ico' | url }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
{% set currentLanguage = language or metadata.language or 'fr' %}
<body{% if bodyClass %} class="{{ bodyClass }}"{% endif %}>
    <header class="site-header">
        <div class="container">
            <div class="header-shell">
                <button class="menu-toggle" type="button" aria-expanded="false" aria-controls="site-menu" aria-label="{{ ui[currentLanguage].open_menu }}">
                    <span class="menu-toggle-label">{{ ui[currentLanguage].menu }}</span>
                    <span class="menu-toggle-icon" aria-hidden="true"></span>
                </button>
                <a href="{{ '/fr/' | url }}" class="logo">
                    {% image "src/assets/img/logo-nav.png", "Healing Hands Concept", "200px" %}
                </a>
                <span class="menu-spacer" aria-hidden="true"></span>
                <div class="header-nav-groups" id="site-menu">
                    <nav class="site-nav site-nav-left" aria-label="Navigation principale gauche">
                        <ul>
                            {% if currentLanguage == 'fr' %}
                            <li><a href="{{ '/fr/healing-pass-entreprises/' | url }}">Pour entreprises</a></li>
                            <li><a href="{{ '/fr/healing-pass-ems/' | url }}">Pour EMS</a></li>
                            <li><a href="{{ '/fr/healing-pass-particuliers/' | url }}">Pour particuliers</a></li>
                            {% else %}
                            <li><a href="#">{{ ui[currentLanguage].companies }}</a></li>
                            <li><a href="#">{{ ui[currentLanguage].ems }}</a></li>
                            <li><a href="#">{{ ui[currentLanguage].individuals }}</a></li>
                            {% endif %}
                        </ul>
                    </nav>
                    <nav class="site-nav site-nav-right" aria-label="Navigation principale droite">
                        <ul>
                            {% if currentLanguage == 'fr' %}
                            <li><a href="{{ '/fr/a-propos/' | url }}">A propos</a></li>
                            <li><a href="{{ '/fr/contact/' | url }}">Contact</a></li>
                            {% else %}
                            <li><a href="#">{{ ui[currentLanguage].about }}</a></li>
                            <li><a href="#">{{ ui[currentLanguage].contact }}</a></li>
                            {% endif %}
                            <li class="lang-switcher">
                                {% set urlFr = '/fr/' %}{% set urlPt = '/pt/' %}{% set urlEn = '/en/' %}
                                {% for i in collections.all %}
                                  {% if i.data.translationKey == translationKey %}
                                    {% if i.data.language == 'fr' %}{% set urlFr = i.url %}{% endif %}
                                    {% if i.data.language == 'pt' %}{% set urlPt = i.url %}{% endif %}
                                    {% if i.data.language == 'en' %}{% set urlEn = i.url %}{% endif %}
                                  {% endif %}
                                {% endfor %}
                                <span class="lang-switcher-label">{{ ui[currentLanguage].lang_label }}</span>
                                <a href="{{ urlFr | url }}" class="lang-option{% if currentLanguage == 'fr' %} is-active{% endif %}" lang="fr"{% if currentLanguage == 'fr' %} aria-current="true"{% endif %}>FR</a>
                                <span class="lang-divider" aria-hidden="true">/</span>
                                <a href="{{ urlPt | url }}" class="lang-option{% if currentLanguage == 'pt' %} is-active{% endif %}" lang="pt"{% if currentLanguage == 'pt' %} aria-current="true"{% endif %}>PT</a>
                                <span class="lang-divider" aria-hidden="true">/</span>
                                <a href="{{ urlEn | url }}" class="lang-option{% if currentLanguage == 'en' %} is-active{% endif %}" lang="en"{% if currentLanguage == 'en' %} aria-current="true"{% endif %}>EN</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <main>
        {{ content | safe }}
    </main>

    <footer class="site-footer">
        <div class="container">
            <div class="footer-content" style="align-items: flex-end;">
                <p>&copy; 2026 Healing Hands Concept. {{ ui[currentLanguage].rights }} <br> {{ ui[currentLanguage].address }}</p>
                <div style="text-align: right; display: flex; flex-direction: column; gap: var(--spacing-sm);">
                    <nav class="footer-nav">
                        {% if currentLanguage == 'fr' %}
                        <a href="{{ '/fr/mentions-legales/' | url }}">Mentions Légales</a>
                        <a href="{{ '/fr/cgv/' | url }}">CGV</a>
                        {% else %}
                        <a href="{{ '/fr/mentions-legales/' | url }}">{{ ui[currentLanguage].legal }}</a>
                        <a href="{{ '/fr/cgv/' | url }}">{{ ui[currentLanguage].cgv }}</a>
                        {% endif %}
                    </nav>
                    <p class="footer-credit">
                        <a href="https://cedricv.com/fr/site-web-rapide/" 
                           title="Expert en sites web statiques et rapides à Fribourg" 
                           target="_blank" 
                           rel="noopener noreferrer">
                           {{ ui[currentLanguage].web_expert }}
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <script src="{{ '/assets/js/script.js' | url }}"></script>
</body>
</html>
